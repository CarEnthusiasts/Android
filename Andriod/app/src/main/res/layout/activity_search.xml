<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carenthusiasts.andriod.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        >



            <TextView
                android:id="@+id/MakeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*Make: " />

            <Spinner
                android:id="@+id/MakeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:id="@+id/ModelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*Model: " />

            <Spinner
                android:id="@+id/ModelSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>


            <TextView
                android:id="@+id/YearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Year Range: "
                android:layout_column="1" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <Spinner
                android:id="@+id/minYearSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxYearSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
</LinearLayout>

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Price Range: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minPriceSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxPriceSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/MileageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Milage: "
                android:layout_column="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minMileageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxMileageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/cylinderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cylinders: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minCylinderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxCylinderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/ExteriorColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ExteriorColor: " />

            <Spinner
                android:id="@+id/exteriorColorSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:id="@+id/interiorColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="InteriorColor: " />

            <Spinner
                android:id="@+id/interiorColorSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:id="@+id/drivetrainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Drivetrain: " />

            <Spinner
                android:id="@+id/drivetrainSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:id="@+id/TransmissionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Transmission: " />

            <Spinner
                android:id="@+id/TransmissionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>


           <TextView
                android:id="@+id/FuelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fuel: " />

            <Spinner
                android:id="@+id/FuelSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:id="@+id/bodyStyleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Body Style: " />

            <Spinner
                android:id="@+id/bodyStyleSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:id="@+id/SeatsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Seats: "
                android:layout_column="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minSeatsSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxSeatsSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/HpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Horsepower: " />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minHpSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxHpSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>
            <TextView
                android:id="@+id/TqText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Torque: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minTqSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxTqSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/EngineDisplacementText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Engine in Litre: " />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minEngineDisplacementSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxEngingeDisplacementSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>
            <TextView
                android:id="@+id/zeroSixtyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0-60 Time: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minZeroSixtySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxZeroSixtySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/TopSpeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Top Speed: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minTopSpeedSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxTopSpeedSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <TextView
                android:id="@+id/SixtyZeroText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="60-0 in ft:"
                android:layout_column="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/minSixtyZeroSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" to " />

            <Spinner
                android:id="@+id/maxSixtyZeroSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/spinner_style"/>
        </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/nextButton"
                android:layout_column="2" />

    </LinearLayout>
</ScrollView>
